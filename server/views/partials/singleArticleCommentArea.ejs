<% if(typeof singleArticleCommentAreaData != 'undefined') { %>
<% singleArticleCommentAreaData.forEach((singleArticleCommentArea)=>{
	let d = new Date(singleArticleCommentArea.comment_timestamp) %>


<li class="single_comment_area">
	<!-- Comment Content -->
	<div class="comment-content d-flex">
		<!-- Comment Author -->
		<div class="comment-author">
			<img src="/img/bg-img/<%=singleArticleCommentArea.image_name%>" alt="author">
		</div>
		<!-- Comment Meta -->
		<div class="comment-meta">
			<a href="#" class="post-author"><%=singleArticleCommentArea.user_name%></a>
			<a href="#" class="post-date"><%=dateAndTime.format(d,'hh:mm A | MMMM DD')%></a>
			<p><%=singleArticleCommentArea.comment_message%></p>
		</div>
	</div>
</li>

<% }) %>

<% } %>