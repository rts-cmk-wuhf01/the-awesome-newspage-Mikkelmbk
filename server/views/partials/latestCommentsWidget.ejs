                        <h3>Latest Comments</h3>

                            <!-- Single Comments -->
                            <%if(typeof latestCommentsWidgetData != 'undefined'){  %>
                            <% latestCommentsWidgetData.forEach((latestCommentWidgetData)=>{
                            let d = new Date(latestCommentWidgetData.article_date) %>
                            <div class="single-comments d-flex">
                                <div class="comments-thumbnail mr-15">
                                    <img src="/img/bg-img/<%=latestCommentWidgetData.image_name%>" alt="">
                                </div>
                                <div class="comments-text">
                                    <a href="/single-article/<%=latestCommentWidgetData.article_id%>"><%=latestCommentWidgetData.user_name%><span> on </span><%=latestCommentWidgetData.article_title%></a>
                                    <p><%=dateAndTime.format(d,' MMMM DD, YYYY')%></p>
                                </div>
                            </div>
                            <% }) %>
                            <% } %>

                           